        //修改采购单数据
        function ModifyOK() {
            var row = $('#outDg').datagrid('getSelected');
            var index = $('#outDg').datagrid('getRowIndex', row.HSID);
            if ($('#MNumbers').val() == null || $('#MNumbers').val() == "") {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请输入修改数量！', 'warning');
                return;
            }
            if ($('#MNumbers').val() < 1) {
                $('#outDg').datagrid('deleteRow', index);
            } else {
                row.Piece = $('#MNumbers').numberbox('getValue');
                row.PurchasePrice = $('#MPurchasePrice').numberbox('getValue');
                row.Batch = $('#MBatch').textbox('getValue');
                $('#outDg').datagrid('updateRow', {
                    index: index,
                    row: row
                });
            }
            var TPiece = 0; var TCharge = 0;
            var rows = $('#outDg').datagrid('getRows');
            for (var i = 0; i < rows.length; i++) {
                TPiece += Number(rows[i].Piece);
                TCharge += Number(accMul(rows[i].Piece, rows[i].PurchasePrice));
            }
            $('#TotalCharge').numberbox('setValue', TCharge);
            $('#Total').numberbox('setValue', TPiece);
            var title = "采购单已拉上数量：" + TPiece + " 条";
            $('#outDg').datagrid("getPanel").panel("setTitle", title);
            $('#dlgModify').dialog('close');
        }
        //删除拉下采购单
        function DelItem() {
            var row = $('#outDg').datagrid('getSelected');
            if (row == null || row == "") {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要删除的数据！', 'warning');
                return;
            }
            $.messager.confirm('<%= Cargo.Common.GetSystemNameAndVersion()%>', '确定删除？', function (r) {
                if (r) {
                    //var row = $("#outDg").datagrid('getData').rows[Did];
                    var n = $('#DisplayNum').val() == "" || isNaN($('#DisplayNum').val()) ? 0 : Number($('#DisplayNum').val());
                    var p = $('#DisplayPiece').val() == "" || isNaN($('#DisplayPiece').val()) ? 0 : Number($('#DisplayPiece').val());
                    n--;
                    var pt = p - row.Piece;
                    $('#DisplayNum').val(Number(n));
                    $('#DisplayPiece').val(Number(pt));
                    var UnitPrice = Number(row.PurchasePrice);//轮胎店价
                    TransportFee -= UnitPrice * row.Piece;
                    $('#TotalCharge').numberbox('setValue', TransportFee);
                    $('#Total').numberbox('setValue', pt);

                    var title = "采购单     已拉上：" + n + "票，总条数：" + pt + " 条";
                    $('#outDg').datagrid("getPanel").panel("setTitle", title);

                    var index = $('#outDg').datagrid('getRowIndex', row);
                    $('#outDg').datagrid('deleteRow', index);

                    $('#dlgModify').dialog('close');
                }
            });
        }
        //保存订单
        function saveOutCargo() {
            //取消业务员禁用方便后台取值
            var rows = $('#outDg').datagrid('getRows');
            if (rows == null || rows == "") { $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要保存的数据！', 'warning'); return; }

            $.messager.confirm('<%= Cargo.Common.GetSystemNameAndVersion()%>', '确定保存？', function (r) {
                if (r) {
                    //启用复选框用于后台数据获取
                    $.messager.progress({ msg: '请稍后,正在保存中...' });
                    $('#btnSave').linkbutton('disable');
                    var json = JSON.stringify(rows);

                    $('#fmDep').form('submit', {
                        url: 'purchaseApi.aspx?method=SavePurchaseOrderData',
                        contentType: "application/json;charset=utf-8",
                        type: 'post', dataType: 'json', data: { data: json },
                        onSubmit: function (param) {
                            param.submitData = json;
                            var trd = $(this).form('enableValidation').form('validate');
                            if (trd) { $('#btnSave').linkbutton('disable'); } else {
                                $.messager.progress("close");
                                $('#btnSave').linkbutton('enable');
                            }
                            return trd;
                        },
                        success: function (msg) {
                            $.messager.progress("close");
                            $('#btnSave').linkbutton('enable');
                            var text = eval('(' + msg + ')');
                            if (text.Result == true) {
                                alert_autoClose('<%= Cargo.Common.GetSystemNameAndVersion()%>', '保存成功！', 'info');
                                reset();
                            }
                            else {
                                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', text.Message, 'warning');
                            }
                        }
                    })
                }
            });
        }
    </script>
</asp:Content>
