        //新增出库数据
        function outOK() {
            var row = $('#dg').datagrid('getSelected');
            if ($('#Numbers').val() == null || $('#Numbers').val() == "") {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请输入拉上采购单数量！', 'warning');
                return;
            }
            if ($('#Numbers').val() < 1) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '拉上采购单数量必须大于0！', 'warning');
                return;
            }
            var index = $('#outDg').datagrid('getRowIndex', $('#PHouseID').combobox('getValue') + "_" + row.SID);
            if (index < 0) {
                var OutData = { TypeName: row.TypeName, ProductCode: row.ProductCode, ProductName: row.ProductName, Specs: row.Specs, Figure: row.Figure, GoodsCode: row.GoodsCode, LoadIndex: row.LoadIndex, SpeedLevel: row.SpeedLevel, SID: row.SID, TypeID: row.TypeID };
                OutData.Piece = $('#Numbers').numberbox('getValue');
                OutData.PurchasePrice = $('#PurchasePrice').numberbox('getValue');
                OutData.Batch = $('#Batch').textbox('getValue');
                OutData.HouseName = $('#PHouseID').combobox('getText');
                OutData.HouseID = $('#PHouseID').combobox('getValue');
                OutData.HSID = $('#PHouseID').combobox('getValue') + "_" + row.SID;
                $('#outDg').datagrid('appendRow', OutData);

                var TPiece = 0; var TCharge = 0;
                var rows = $('#outDg').datagrid('getRows');
                for (var i = 0; i < rows.length; i++) {
                    TPiece += Number(rows[i].Piece);
                    TCharge += Number(accMul(rows[i].Piece, rows[i].PurchasePrice));
                }
                $('#DisplayNum').val(Number(rows.length));
                $('#DisplayPiece').val(Number(TPiece));
                var title = "采购单    已拉上：" + rows.length + "票，总条数：" + TPiece + " 条";
                $('#outDg').datagrid("getPanel").panel("setTitle", title);
                $('#TotalCharge').numberbox('setValue', TCharge);
                $('#Total').numberbox('setValue', TPiece);

                closedgShowData();

            } else {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '采购单列表已存在该产品，请修改或删除再添加！', 'warning');
            }
        }
