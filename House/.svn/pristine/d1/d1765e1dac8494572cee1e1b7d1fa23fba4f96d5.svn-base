<%@ Page Title="商城退款审核" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="financeRefundCheck.aspx.cs" Inherits="Cargo.Finance.financeRefundCheck" %>

<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server">
    <script src="../JS/Lodop/LodopFuncs.js" type="text/javascript"></script>
    <script type="text/javascript">
        //页面加载时执行
        window.onload = function () {
            adjustment();
        }
        $(window).resize(function () {
            adjustment();
        });
        function adjustment() {
            var height = parseInt((Number($(window).height()) - Number($("div[name='SelectDiv1']").outerHeight(true))));
            $('#dg').datagrid({ height: height });
        }
        //页面加载显示遮罩层防止用户看见未加载CSS的页面
        var pc;
        $.parser.onComplete = function () {
            if (pc) {
                clearTimeout(pc);
            }
            pc = setTimeout(closemask, 10);
        }
        //加载完成后关闭遮罩层
        function closemask() {
            $("#Loading").fadeOut("normal", function () {
                $(this).remove();
            });
        }
        $(document).ready(function () {
            var columns = [];
            columns.push({
                title: '客户名称', field: 'ClientName', width: '110px', formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({
                title: '退款提交时间', field: 'RefundDate', width: '120px', formatter: DateTimeFormatter
            });
            columns.push({
                title: '退款原因', field: 'RefundReason', width: '120px', formatter: function (val, row, index) {
                    if (val == "1") { return "<span title='商品无货'>商品无货</span>"; }
                    else if (val == "2") { return "<span title='发货时间问题'>发货时间问题</span>"; }
                    else if (val == "3") { return "<span title='不想要了'>不想要了</span>"; }
                    else if (val == "4") { return "<span title='商品错选/多选'>商品错选/多选</span>"; }
                    else if (val == "5") { return "<span title='地址信息错误'>地址信息错误</span>"; }
                    else if (val == "6") { return "<span title='商品价格太高'>商品价格太高</span>"; }
                    else { return ""; }
                }
            });
            columns.push({
                title: '退款备注', field: 'RefundMemo', width: '160px', formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            }); columns.push({
                title: '退款审核人姓名', field: 'RefundCheckName', width: '110px', formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({ title: '退款审核时间', field: 'RefundCheckDate', width: '120px', formatter: DateTimeFormatter });
            columns.push({
                title: '所在仓库', field: 'HouseName', width: '120px', formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({
                title: '数量', field: 'Piece', width: '60px', align: 'right', styler: function (val, row, index) { return "color:#12bb1f;font-weight:bold;" }, formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({
                title: '物流配送费', field: 'TransitFee', width: '110px', align: 'right', styler: function (val, row, index) { return "color:#12bb1f;font-weight:bold;" }, formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({
                title: '合计费用', field: 'TotalCharge', width: '80px', align: 'right', formatter: function (value) {
                    return "<span title='" + value + "'>" + value + "</span>";
                }
            });
            columns.push({
                title: '订单类型', field: 'OrderType', width: '130px',
                formatter: function (val, row, index) {
                    if (val == "2") { return "<span title='微信商城订单'>微信商城订单</span>"; }
                    else if (val == "3") { return "<span title='APP商城订单'>APP商城订单</span>"; }
                    else if (val == "4") { return "<span title='云配小程序商城订单'>云配小程序商城订单</span>"; }
                    else { return ""; }
                }
            }); columns.push({
                title: '类型', field: 'ThrowGood', width: '130px',
                formatter: function (val, row, index) {
                    if (val == "22") { return "<span title='即日达订单'>即日达订单</span>"; }
                    else if (val == "23") { return "<span title='次日达订单'>次日达订单</span>"; }
                    else { return ""; }
                }
            });
            columns.push({ title: '下单时间', field: 'CreateDate', width: '130px', formatter: DateTimeFormatter });
            columns.push({ title: '操作时间', field: 'OP_DATE', width: '130px', formatter: DateTimeFormatter });

            $('#dg').datagrid({
                width: '100%',
                loadMsg: '数据加载中请稍候...',
                autoRowHeight: false, //行高是否自动
                collapsible: true, //是否可折叠
                pagination: true, //分页是否显示
                pageSize: Math.floor((Number($(window).height()) - $("div[name='SelectDiv1']").outerHeight(true) - 58) / 28), //每页多少条
                pageList: [Math.floor((Number($(window).height()) - $("div[name='SelectDiv1']").outerHeight(true) - 58) / 28), Math.floor((Number($(window).height()) - $("div[name='SelectDiv1']").outerHeight(true) - 58) / 28) * 2],
                fitColumns: false, //设置为 true，则会自动扩大或缩小列的尺寸以适应网格的宽度并且防止水平滚动
                singleSelect: true, //设置为 true，则只允许选中一行。
                checkOnSelect: true, //如果设置为 true，当用户点击某一行时，则会选中/取消选中复选框。如果设置为 false 时，只有当用户点击了复选框时，才会选中/取消选中复选框
                idField: 'ID',
                url: null,
                toolbar: '#dgtoolbar',
                frozenColumns: [[
                    { title: '', field: '', checkbox: true, width: '30px' },
                    {
                        title: '订单号', field: 'CargoOrderNo', width: '130px', formatter: function (value) {
                            return "<span title='" + value + "'>" + value + "</span>";
                        }
                    },
                    {
                        title: '微信订单号', field: 'OrderNo', width: '130px', formatter: function (value) {
                            return "<span title='" + value + "'>" + value + "</span>";
                        }
                    }, {
                        title: '微信支付订单号', field: 'WXPayOrderNo', width: '220px', formatter: function (value) {
                            return "<span title='" + value + "'>" + value + "</span>";
                        }
                    },
                    //{
                    //    title: '退货来货入库单号', field: 'FacOrderNo', width: '130px', formatter: function (value) {
                    //        return "<span title='" + value + "'>" + value + "</span>";
                    //    }
                    //},
                    {
                        title: '审核状态', field: 'RefundCheckStatus', width: '110px',
                        formatter: function (val, row, index) {
                            if (val == "0") { return "<span title='未审核'>未审核</span>"; }
                            else if (val == "1") { return "<span title='已审核'>已审核</span>"; }
                            else { return ""; }
                        }
                    },
                    {
                        title: '付款状态', field: 'PayStatus', width: '100px',
                        formatter: function (val, row, index) {
                            if (val == "0") { return "<span title='未付款'>未付款</span>"; }
                            else if (val == "1") { return "<span title='已付款'>已付款</span>"; }
                            else if (val == "2") { return "<span title='申请退款'>申请退款</span>"; }
                            else if (val == "3") { return "<span title='已退款'>已退款</span>"; }
                            else { return ""; }
                        }
                    }, {
                        title: '订单状态', field: 'OrderStatus', width: '110px',
                        formatter: function (val, row, index) {
                            if (val == "0") { return "<span title='客户下单'>客户下单</span>"; }
                            else if (val == "1") { return "<span title='仓库确认'>仓库确认</span>"; }
                            else if (val == "2") { return "<span title='仓库发货'>仓库发货</span>"; }
                            else if (val == "3") { return "<span title='在途'>在途</span>"; }
                            else if (val == "4") { return "<span title='客户收货'>客户收货</span>"; }
                            else { return ""; }
                        }
                    }
                    , {
                        title: '退货入库状态', field: 'InCargoStatus', width: '110px',
                        formatter: function (val, row, index) {
                            if (val == "0") { return "<span title='未入库'>未入库</span>"; }
                            else if (val == "1") { return "<span title='已入库'>已入库</span>"; }
                            else if (val == "2") { return "<span title='部分入库'>部分入库</span>"; }
                            else { return ""; }
                        }
                    }
                ]],
                columns: [columns],
                onClickRow: function (index, row) {
                    $('#dg').datagrid('clearSelections');
                    $('#dg').datagrid('selectRow', index);
                },
                rowStyler: function (index, row) { },
                //onDblClickRow: function (index, row) {
                //    // editItemByID(index);
                //}
            });
            var datenow = new Date();
            $('#StartDate').datebox('setValue', getLastDayFormatDate(datenow));
            $('#EndDate').datebox('setValue', getNowFormatDate(datenow));
            $('#StartDate').datebox('textbox').bind('focus', function () { $('#StartDate').datebox('showPanel'); });
            $('#EndDate').datebox('textbox').bind('focus', function () { $('#EndDate').datebox('showPanel'); });

            //所在仓库
            $('#AHouseID').combobox({
                url: '../House/houseApi.aspx?method=CargoPermisionHouse',
                valueField: 'HouseID', textField: 'Name',
                onSelect: function (rec) {
                    $('#InBoss').combobox('clear');
                    var url = '../Client/clientApi.aspx?method=AutoCompleteClient&houseID=' + rec.HouseID;
                    $('#InBoss').combobox('reload', url);

                }
            });
            $("#AHouseID").combobox("setValue", '<%=UserInfor.HouseID%>');
            $('#AHouseID').combobox('textbox').bind('focus', function () { $('#HouseID').combobox('showPanel'); });
        });

        //查询
        function dosearch() {
            $('#dg').datagrid('clearSelections');
            var gridOpts = $('#dg').datagrid('options');
            gridOpts.url = 'financeApi.aspx?method=QueryRefundCheckData';
            $('#dg').datagrid('load', {
                CargoOrderNo: $('#ACargoOrderNo').val(),
                OrderNo: $('#AOrderNo').val(),
                WXPayOrderNo: $('#AWXPayOrderNo').val(),
                ClientName: $('#AClientName').val(),
                HouseID: $("#AHouseID").combobox('getValue'),//仓库ID
                RefundReason: $("#ARefundReason").combobox('getValue'),
                RefundCheckStatus: $("#ARefundCheckStatus").combobox('getValue'),
                StartDate: $('#StartDate').datebox('getValue'),
                EndDate: $('#EndDate').datebox('getValue'),
            });
        }
    </script>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
    <div id='Loading' style="position: absolute; z-index: 1000; top: 0px; left: 0px; width: 98%; height: 100%; background: white; text-align: center; padding: 5px 10px; display: table;">
        <div style="display: table-cell; vertical-align: middle">
            <h1><font size="9">页面加载中……</font></h1>
        </div>
    </div>
    <div id="saPanel" name="SelectDiv1" class="easyui-panel" title="" data-options="iconCls:'icon-search'">
        <table>
            <tr>
                <td style="text-align: right;">订单号:
                </td>
                <td>
                    <input id="ACargoOrderNo" class="easyui-textbox" data-options="prompt:'请输入完整订单号'" style="width: 150px" />
                </td>
                <td style="text-align: right;">微信订单号:
                </td>
                <td>
                    <input id="AOrderNo" class="easyui-textbox" data-options="prompt:'请输入微信订单号'" style="width: 140px" />
                </td>
                <td style="text-align: right;">微信支付订单号:
                </td>
                <td>
                    <input id="AWXPayOrderNo" class="easyui-textbox" data-options="prompt:'请输入微信支付订单号'" style="width: 140px" />
                </td>

                <td style="text-align: right;">客户名称:
                </td>
                <td>
                    <input id="AClientName" class="easyui-textbox" data-options="prompt:'请输入客户名称'" style="width: 100px" />
                </td>
            </tr>
            <tr>
                <td style="text-align: right;">所在仓库:
                </td>
                <td>
                    <input id="AHouseID" class="easyui-combobox" style="width: 100px;" />
                </td>
                <td style="text-align: right;">审核状态:
                </td>
                <td>
                    <select id="ARefundCheckStatus" class="easyui-combobox" style="width: 100px;" panelheight="auto">
                        <option value="-1">全部</option>
                        <option value="0">未审核</option>
                        <option value="1">已审核</option>
                    </select>
                </td>

                <td style="text-align: right;">退款原因:
                </td>
                <td>
                    <select class="easyui-combobox" id="ARefundReason" style="width: 120px;" panelheight="auto">
                        <option value="-1">全部</option>
                        <option value="1">商品无货</option>
                        <option value="2">发货时间问题</option>
                        <option value="3">不想要了</option>
                        <option value="4">商品错选/多选</option>
                        <option value="5">地址信息</option>
                    </select>
                </td>
                <td style="text-align: right;">退款提交时间:
                </td>
                <td colspan="3">
                    <input id="StartDate" class="easyui-datebox" style="width: 100px" />~
                    <input id="EndDate" class="easyui-datebox" style="width: 100px" />
                </td>
            </tr>
        </table>
    </div>
    <table id="dg" class="easyui-datagrid">
    </table>
    <div id="dgtoolbar">
        <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="false" onclick="dosearch()">&nbsp;查&nbsp;询&nbsp;</a>&nbsp;&nbsp;
        <a href="#" class="easyui-linkbutton" iconcls="icon-cut" plain="false" onclick="submitApprove()" id="ApproveItem">&nbsp;审核&nbsp;</a>&nbsp;&nbsp;
        <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="false" onclick="addReturn()" id="ReturnItem">&nbsp;生成退货单&nbsp;</a>&nbsp;&nbsp;
    </div>
    <%-- 退货数量弹框 --%>
    <div id="dlg" class="easyui-dialog" style="width: 450px; height: 200px; padding: 0px"
        closed="true" buttons="#dlg-buttons">
        <div id="saPanel">
            <form id="fm" class="easyui-form" method="post">
                <input type="hidden" name="ID" />
                <table>
                    <tr>
                        <td style="text-align: right;">微信支付订单号:
                        </td>
                        <td>
                            <input name="WXPayOrderNo" id="WXPayOrderNo" class="easyui-textbox"
                                style="width: 200px;" />
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">订单数量:
                        </td>
                        <td>
                            <input name="OrderNum" id="OrderNum" class="easyui-textbox"
                                style="width: 150px;" />
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">退货数量:
                        </td>
                        <td>
                            <input name="ReturnNum" id="ReturnNum" class="easyui-numberbox" data-options="min:0"
                                style="width: 150px;" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
    <%-- 退货数量确认框 --%>
    <div id="dlg-buttons">
        <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="saveItem()">&nbsp;保&nbsp;存&nbsp;</a>&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">&nbsp;取&nbsp;消&nbsp;</a>
    </div>

    <script type="text/javascript">
        //新增退货信息
        function addReturn() {
            var row = $('#dg').datagrid('getSelected');
            if (row == null || row == "" || row == undefined) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要生成退货单的数据！', 'warning');
                return;
            }
            else if (row.InCargoStatus != "" && (row.FacOrderNo != null || row.FacOrderNo != "" || row.FacOrderNo != undefined)) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', "该订单已生成退货单！", 'warning');
                return;
            }
            else if ((row.PayStatus != "2" || row.RefundCheckStatus != "0") || (row.InCargoStatus != "" && (row.FacOrderNo != null || row.FacOrderNo != "" || row.FacOrderNo != undefined))) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请仔细检查审核状态再生成退货单！', 'warning');
                return;
            } else if (row.PayStatus == "2" && row.RefundCheckStatus == "0" && row.OrderStatus == "0") {//未审核客户下单申请退款
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请仔细检查订单状态再生成退货单！', 'warning');
                return;
            } else {
                $('#dlg').dialog('open').dialog('setTitle', '生成退货单');
                $('#fm').form('clear');
                $('#WXPayOrderNo').textbox('setValue', row.WXPayOrderNo);
                $('#OrderNum').textbox('setValue', row.Piece);
                $('#WXPayOrderNo').textbox('disable');
                $('#OrderNum').textbox('disable');
                $('#ReturnNum').numberbox('setValue', row.Piece);
                $('#ReturnNum').numberbox('enable');
            }
        }
        //保存退货信息
        function saveItem() {
            var ReturnPiece = $('#ReturnNum').numberbox('getValue');
            var Piece = $('#OrderNum').numberbox('getValue');
            console.log('ReturnPiec:', + $('#ReturnNum').numberbox('getValue'), ' Piece:' + $('#OrderNum').numberbox('getValue'));
            if (ReturnPiece <= 0) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '退货数量不能小于等于0！', 'warning');
                return;
            } else if (ReturnPiece > Piece) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '退货数量不能大于订单数量！', 'warning');
                return;
            }
            var row = $('#dg').datagrid('getSelected');
            $.messager.confirm('<%= Cargo.Common.GetSystemNameAndVersion()%>', "确定生成退货单吗？", function (r) {
                if (r) {
                    $.messager.progress({ msg: '请稍后,正在提交中...' });
                    var json = JSON.stringify(row)
                    $.ajax({
                        url: 'financeApi.aspx?method=AddReturnOrder',
                        type: 'post', dataType: 'json',
                        data: {
                            ID: row.ID,
                            InCargoStatus: row.InCargoStatus,
                            FacOrderNo: row.FacOrderNo,
                            RefundCheckStatus: row.RefundCheckStatus,
                            CargoOrderNo: row.CargoOrderNo,
                            OrderNo: row.OrderNo,
                            WXPayOrderNo: row.WXPayOrderNo,
                            HouseID: row.HouseID,
                            ReturnPiece: ReturnPiece,
                            Piece: Piece,
                        },
                        success: function (text) {
                            if (text.Result == true) {
                                $.messager.progress("close");
                                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '保存成功!', 'info');
                                $('#dlg').dialog('close'); 	// close the dialog
                                dosearch();
                            }
                            else {
                                $.messager.progress("close");
                                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '保存失败：' + text.Message, 'warning');
                            }
                        }
                    });
                }
            });
        }
        //提交审核
        function submitApprove() {
            var row = $('#dg').datagrid('getSelected');
            var title = "确定审核通过吗？";
            if (row == null || row == "" || row == undefined) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要审核的数据！', 'warning');
                return;
            }
            else if (row.InCargoStatus != "" && row.InCargoStatus != "1" && (row.FacOrderNo != null || row.FacOrderNo != "" || row.FacOrderNo != undefined)) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '该订单的退货单还未完全入库！', 'warning');
                return;
            } else if (row.PayStatus != "2" || row.RefundCheckStatus != "0") {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请仔细检查审核状态再审核！', 'warning');
                return;
            } else if (row.OrderStatus != "0" && (row.InCargoStatus == null || row.InCargoStatus == "" || row.InCargoStatus == undefined)) {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '该订单已出库，请先生成退货单！', 'warning');
                return;
            }
            $.messager.confirm('<%= Cargo.Common.GetSystemNameAndVersion()%>', title, function (r) {
                if (r) {
                    $.messager.progress({ msg: '请稍后,正在提交中...' });
                    var json = JSON.stringify(row)
                    $.ajax({
                        url: 'financeApi.aspx?method=UpdateRefundCheckStatus',
                        type: 'post', dataType: 'json',
                        data: {
                            ID: row.ID,
                            RefundCheckStatus: row.RefundCheckStatus,
                            CargoOrderNo: row.CargoOrderNo,
                            OrderID: row.OrderID,
                            OrderNo: row.OrderNo,
                            FacOrderNo: row.FacOrderNo,
                            InCargoStatus: row.InCargoStatus,
                        },
                        success: function (text) {
                            $.messager.progress("close");
                            if (text.Result == true) {
                                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '提交成功！', 'info');
                                $('#dg').datagrid('reload');
                            }
                            else {
                                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', text.Message, 'warning');
                            }
                        }
                    });
                }
            });
        }
    </script>
</asp:Content>

