                singleSelect: false, //设置为 true，则只允许选中一行。
                //ctrlSelect:true,
                checkOnSelect: true, //如果设置为 true，当用户点击某一行时，则会选中/取消选中复选框。如果设置为 false 时，只有当用户点击了复选框时，才会选中/取消选中复选框
                idField: 'HouseID',
                url: null,
                columns: [[
                  { title: '所属仓库', field: 'HouseName', width: '80px' },
                  {
                      title: '订单类型', field: 'OrderType', width: '60px',
                      formatter: function (val, row, index) {
                          if (val == "0") { return "商城订单"; } else if (val == "1") { return "电脑订单"; } else { return ""; }
                      }
                  },
                  { title: '数量', field: 'TNum', width: '60px', align: 'right' }
                ]],
                onClickRow: function (index, row) {
                    $('#dgHouseType').datagrid('clearSelections');
                    $('#dgHouseType').datagrid('selectRow', index);
                },
            });
            $('#dgSaleMan').datagrid({
                width: '430px',
                height: '300px',
                title: '',
                //iconCls: 'icon-view',//标题图标
                loadMsg: '数据加载中请稍候...',
                autoRowHeight: true, //行高是否自动
                //striped: true, //奇偶行使用不同背景色
                collapsible: false, //是否可折叠
                pagination: false, //分页是否显示
                rownumbers: true, //行号
                fitColumns: false, //设置为 true，则会自动扩大或缩小列的尺寸以适应网格的宽度并且防止水平滚动
                singleSelect: false, //设置为 true，则只允许选中一行。
                //ctrlSelect:true,
                checkOnSelect: true, //如果设置为 true，当用户点击某一行时，则会选中/取消选中复选框。如果设置为 false 时，只有当用户点击了复选框时，才会选中/取消选中复选框
