                  { title: '成本价', field: 'TaxCostPrice', width: '60px', align: 'right' },
                  { title: '系统价', field: 'OrderPrice', width: '60px', align: 'right' },
                  { title: '修改价', field: 'ModifyPrice', width: '60px', align: 'right' }
                ]],
                onClickRow: function (index, row) {
                    $('#dgTag').datagrid('clearSelections');
                    $('#dgTag').datagrid('selectRow', index);
                }
            });
        }
    </script>

