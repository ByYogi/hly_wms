    <script type="text/javascript">
        //查看审批流程
        function updateOrderStatus() {
            var row = $('#dg').datagrid('getSelected');
            if (row == null || row == "") {
                $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要查看的数据！', 'info');
                return;
            }
            if (row) {
                $('#dlgStatus').dialog('open').dialog('setTitle', '查看审批单：' + row.OID + ' 的审核流程图');
                $.ajax({
                    url: "../Finance/financeApi.aspx?method=QueryExpenseRout&id=" + row.OID + "&ApproveType=1&ApplyID=" + row.ApplyID + "&ApplyName=" + row.ApplyName,
                    cache: false,
                    success: function (text) {
                        var ldl = document.getElementById("lblTrack");
                        ldl.innerHTML = text;
                    }
                });
            }
        }
        //改价申请审批的统计
        function statis() {
            $('#divStatis').dialog('open').dialog('setTitle', '改价申请审批统计分析');
            //所在仓库
            $('#AID').combobox({
                url: '../House/houseApi.aspx?method=CargoPermisionHouse', valueField: 'HouseID', textField: 'Name',
            });
            var datenow = new Date();
            $('#AStartDate').datebox('setValue', getLastDayFormatDate(datenow));
            $('#AEndDate').datebox('setValue', getNowFormatDate(datenow));
            showdgViolate();
            QueryViolate();
        }
        //查询申请审批统计数据
        function QueryViolate() {
            $('#dgHouseType').datagrid('clearSelections');
            var gridOpts = $('#dgHouseType').datagrid('options');
            gridOpts.url = 'orderApi.aspx?method=QueryStatisOrderType';
            $('#dgHouseType').datagrid('load', {
                AID: $("#AID").combobox('getValue'),
                StartDate: $('#AStartDate').datebox('getValue'),
                EndDate: $('#AEndDate').datebox('getValue'),
            });
            $('#dgSaleMan').datagrid('clearSelections');
            var gridOpts = $('#dgSaleMan').datagrid('options');
            gridOpts.url = 'orderApi.aspx?method=QueryStatisSaleMan';
            $('#dgSaleMan').datagrid('load', {
                AID: $("#AID").combobox('getValue'),
                StartDate: $('#AStartDate').datebox('getValue'),
                EndDate: $('#AEndDate').datebox('getValue'),
            });
        }
