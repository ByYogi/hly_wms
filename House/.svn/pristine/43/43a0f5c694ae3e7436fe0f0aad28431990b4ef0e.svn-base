                url: null,
                columns: [[
                  { title: '所属仓库', field: 'HouseName', width: '80px' },
                  { title: '业务员', field: 'SaleManName', width: '80px' },
                  { title: '数量', field: 'TNum', width: '60px', align: 'right' }
                ]],
                onClickRow: function (index, row) {
                    $('#dgSaleMan').datagrid('clearSelections');
                    $('#dgSaleMan').datagrid('selectRow', index);
                },
            });
        }
        //双击显示订单详细界面
        function editItemByID(Did) {
            var row = $("#dg").datagrid('getData').rows[Did];
            if (row) {
                $('#productTag').dialog('open').dialog('setTitle', '查询订单：' + row.OrderNo + '改价申请明细');
                showTagGrid();
                var gridOpts = $('#dgTag').datagrid('options');
                gridOpts.url = 'orderApi.aspx?method=queryOrderUpdateGoodsByOIDComputer&OID=' + row.OID + '&OrderType=' + row.OrderType;
            }
        }
        //标签数据列表
