        /// <summary>
        /// 模糊查询并删除
        /// GET /redis/delete?pattern=Upload
        /// </summary>
        public static void DeleteKeys(string pattern, int _DbIndex = -1)
        {
            if (string.IsNullOrWhiteSpace(pattern))
                return;
            pattern = AddKeyPrefix(pattern);
            var db = GetDatabase((_DbIndex == -1 ? DbIndex : _DbIndex));
            var deletedKeys = new List<RedisKey>();

            foreach (var endpoint in Instance.GetEndPoints())
            {
                var server = Instance.GetServer(endpoint);

                // 用通配符查找，注意加 * 
                foreach (var key in server.Keys(database: (_DbIndex == -1 ? DbIndex : _DbIndex), pattern: $"*{pattern}*"))
                {
                    deletedKeys.Add(key);
                }
            }

            if (deletedKeys.Any())
            {
                db.KeyDelete(deletedKeys.ToArray());
            }
        }

