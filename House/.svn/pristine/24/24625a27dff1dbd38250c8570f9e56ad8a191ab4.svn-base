                                    //var result = eval('(' + msg + ')');
                                    if (text.Result == true) {
                                        $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '修改成功!', 'info');
                                    }
                                    else {
                                        $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', text.Message, 'warning');
                                    }
                                }
                            });
                        }
                        $('#dg').datagrid('reload');
                    });
                }
                if (cg.field == "SalePrice") {
                    //修改销售价
                    $.messager.confirm('<%= Cargo.Common.GetSystemNameAndVersion()%>', '确定修改产品销售价？', function (r) {
