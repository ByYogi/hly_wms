using System;
using System.Collections;
using System.Collections.Generic;
using System.Data;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using House.Entity.Cargo;

namespace Cargo.Product
{
    public partial class productReserveShelves : BasePage
    {
        public int HouseID = 0;
        protected void Page_Load(object sender, EventArgs e)
        {
            HouseID = UserInfor.HouseID;
        }

        /// <summary>
        /// 商品上架导出实体
        /// </summary>
        public List<CargoContainerShowEntity> ShelvesExportData_Reserve
        {
            get
            {
                if (Session["ShelvesExportData_Reserve"] == null)
                {
                    Session["ShelvesExportData_Reserve"] = new List<CargoContainerShowEntity>();
                }
                return (List<CargoContainerShowEntity>)(Session["ShelvesExportData_Reserve"]);
            }
            set
            {
                Session["ShelvesExportData_Reserve"] = value;
            }
        }
        protected void btnExport_Click(object sender, EventArgs e)
        {
            if (ShelvesExportData_Reserve.Count <= 0) { return; }
            string tname = string.Empty;
            DataTable table = new DataTable();

            // 对应前端列配置，按顺序添加（跳过 checkbox 选择列，仅保留数据列）
            table.Columns.Add("产品代码", typeof(string));        // field: ProductCode
            table.Columns.Add("上架数量", typeof(string));        // field: ShelvesNum（若为数值类型可改为 typeof(int)）
            table.Columns.Add("销售价格", typeof(string));        // field: ProductPrice（若为金额可改为 typeof(decimal)）
            table.Columns.Add("签约价格", typeof(string));        // field: SigningPrice（若为金额可改为 typeof(decimal)）
            table.Columns.Add("最低起购", typeof(string));        // field: minPurchase（若为数值类型可改为 typeof(int)）
            table.Columns.Add("品牌", typeof(string));            // field: TypeName
            table.Columns.Add("规格", typeof(string));            // field: Specs
            table.Columns.Add("花纹", typeof(string));            // field: Figure
            table.Columns.Add("载速", typeof(string));            // field: LoadIndex + SpeedLevel 组合值
            table.Columns.Add("货品代码", typeof(string));        // field: GoodsCode
            table.Columns.Add("仓库", typeof(string));            // field: HouseName
            table.Columns.Add("上架状态", typeof(string));        // field: OnShelves（存储格式化后的值：已上架/未上架，或原始值0/1）
            table.Columns.Add("操作时间", typeof(string));        // field: OP_DATE（若需日期类型可改为 typeof(DateTime)）
            foreach (var it in ShelvesExportData_Reserve)
            {
                // 1. 创建新行（对应一条数据）
                DataRow newRow = table.NewRow();

                // 2. 逐列赋值（与 DataTable 列顺序、前端 field 一一对应）
                newRow["产品代码"] = it.ProductCode ?? "";
                newRow["上架数量"] = it.ShelvesNum.ToString() ?? "";  // 若为数值类型，转字符串适配 DataTable
                newRow["销售价格"] = it.ProductPrice.ToString() ?? "";  // 金额可加格式化：ToString("F2") 保留两位小数
                newRow["签约价格"] = it.SigningPrice.ToString() ?? "";
                newRow["最低起购"] = it.minPurchase.ToString() ?? "";
                newRow["品牌"] = it.TypeName ?? "";
                newRow["规格"] = it.Specs ?? "";
                newRow["花纹"] = it.Figure ?? "";
                // 载速：拼接 LoadIndex + SpeedLevel（与前端 formatter 逻辑一致）
                newRow["载速"] = $"{it.LoadIndex ?? ""}{it.SpeedLevel ?? ""}";
                newRow["货品代码"] = it.GoodsCode ?? "";
                newRow["仓库"] = it.HouseName ?? "";
                // 上架状态：按前端逻辑格式化（0=已上架，1=未上架）
                newRow["上架状态"] = it.OnShelves == "0" ? "已上架" : it.OnShelves == "1" ? "未上架" : "";
                // 操作时间：若为 DateTime 类型，格式化字符串（适配 DataTable 的 string 类型）
                newRow["操作时间"] = it.OP_DATE != null ? it.OP_DATE.ToString("yyyy-MM-dd HH:mm:ss") : "";

                // 3. 将赋值后的行添加到 DataTable
                table.Rows.Add(newRow);
            }
            ToExcel.DataTableToExcel(table, "", "商品上架导出数据");
        }

        public static string GetSaleType(string type)
        {
            string value="";
            switch (type)
            {
                case "0":
                    value = "正价销售";
                    break;
                case "1":
                    value = "天天特价";
                    break;
                case "3":
                    value = "限时促销";
                    break;
                case "4":
                    value = "积分兑换";
                    break;
            }
            return value;
        }
        public static string GetOnShelves(string type)
        {
            string value = "";
            switch (type)
            {
                case "0":
                    value = "已上架";
                    break;
                case "1":
                    value = "未上架";
                    break;
            }
            return value;
        }

    }
}