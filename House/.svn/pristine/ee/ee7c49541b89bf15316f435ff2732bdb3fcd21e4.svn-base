                            if (value != null && value != "") {
                                return "<span title='" + value + "'>" + value + "</span>";
                            }
                        }
                    }
                ]],
                rowStyler: function (index, row) {
                    if (row.FromTO == "7" || row.FromTO == "8") { return "color:#D07A7A"; };
                    if (row.RevokeType == 1) { return "color:#D3C7C7"; }
                },
