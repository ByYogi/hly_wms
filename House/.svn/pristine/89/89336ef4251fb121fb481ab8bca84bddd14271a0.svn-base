                // });
                // columns.push({
                //     title: '缺货数量', field: 'Piece', width: '60px', align: 'right', styler: function (val, row, index) { return "color:#12bb1f;font-weight:bold;" }
                // });
                // columns.push({
                //     title: '所在仓库', field: 'HouseName', width: '60px'
                // });
                // columns.push({
                //     title: '上级仓库', field: 'ParentHouseName', width: '60px'
                // });
                //出库列表
                $('#roDg').datagrid({
                    width: '100%',
                    height: '100%',
                    title: '补库订单', //标题内容
                    loadMsg: '数据加载中请稍候...',
                    autoRowHeight: false, //行高是否自动
                    pagination: true, //分页是否显示
                    fitColumns: false, //设置为 true，则会自动扩大或缩小列的尺寸以适应网格的宽度并且防止水平滚动
                    singleSelect: true, //设置为 true，则只允许选中一行。
                    checkOnSelect: true, //如果设置为 true，当用户点击某一行时，则会选中/取消选中复选框。如果设置为 false 时，只有当用户点击了复选框时，才会选中/取消选中复选框
                    idField: 'RplID',
                    pageSize: 30, //每页多少条
                    pageList: [30, 50, 80, 120],
                    toolbar: '#roQueryToolbar',
                    url: null,
                    columns: [columns],
                    onClickRow: function (index) { roGoodsSearch(index); }
                });

                columns = [{
                    title: '产品代码', field: 'ProductCode', width: '120px', formatter: function (value) {
                            return "<span title='" + value + "'>" + value + "</span>";
