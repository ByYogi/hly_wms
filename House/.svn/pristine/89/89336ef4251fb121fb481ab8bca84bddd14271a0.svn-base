                // columns.push({ title: '', field: 'OOSID', checkbox: true, width: '10%' });
                // columns.push({
                //     title: '产品代码', field: 'ProductCode', width: '60px'
                // });
                // columns.push({
                //     title: '产品名称', field: 'ProductName', width: '60px'
                // });
