                        {
                            title: '产品名称', field: 'ProductName', width: '105px'
                        },
                        {
                            title: '品牌', field: 'TypeName', width: '65px'
                        },
                    ]],
                    onLoadSuccess: function(){
                        // 数据加载完成后，让每一行进入编辑状态
                        var dg = $(this);
                        var rows = dg.datagrid('getRows');
                        for (var i = 0; i < rows.length; i++) {
                            dg.datagrid('beginEdit', i);

                            // 防止编辑框选中操作会导致选中当前行
                            var editors = dg.datagrid('getEditors', i);
                            editors.forEach(function (ed) {
                                var realInput = $(ed.target).next('span').find('input.textbox-text');
                            
                                realInput.on('focus', function () {
                                    IsCheckFlag = false;
                                });
                            });
                        }
                        
                        // 防止选中单元格操作会导致选中当前行
                        var panel = $('#dg').datagrid('getPanel');
                            var allCells = panel.find('div.datagrid-body td div.datagrid-cell');
                            allCells.off('mousedown').on('mousedown', function () {
                                    IsCheckFlag = false;
                        });
                    },
                    
                    // 防止选中行会导致选中当前行
                    onClickCell: function (rowIndex, field, value) {
                        IsCheckFlag = false;
                    },
                    onSelect: function (rowIndex, rowData) {
                        if (!IsCheckFlag) {
                            IsCheckFlag = true;
                            $("#dg").datagrid("unselectRow", rowIndex);
                        }
                    },                    
                    onUnselect: function (rowIndex, rowData) {
                        if (!IsCheckFlag) {
                            IsCheckFlag = true;
                            $("#dg").datagrid("selectRow", rowIndex);
                        }
                    },
                    
                    onDblClickRow: function(rowIndex, rowData) {
                        var dg = $(this);
                        // // 判断当前行是否已经选中
                        // var selected = dg.datagrid('getSelections').some(function(row) {
                        //     return row === rowData;
                        // });

                        // if (selected) {
                        //     dg.datagrid('unselectRow', rowIndex); // 取消选中
                        // } else {
                        //     dg.datagrid('selectRow', rowIndex);   // 选中
                        // }
                        dg.datagrid('selectRow', rowIndex);   // 选中
                        openCreationModal();
                    }
                });
                columns =[
                    {
                        title: '补货单号', field: 'RplNo', width: '100px'
                    },
