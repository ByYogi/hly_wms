            //添加行数据
            function openCreationModal() {

                var rows = $('#dg').datagrid('getSelections');
                if (rows == null || rows.length == 0) {
                    $.messager.alert('<%= Cargo.Common.GetSystemNameAndVersion()%>', '请选择要补货的数据！', 'warning');
                    return;
                }
                
                //获取确认补货数
                for (var i = 0; i < rows.length; i++) {
                    var row = rows[i];
                    var index = $('#dg').datagrid('getRowIndex', row);

                    var ConfirmPiece = $('#dg').datagrid('getEditor', {index:index, field:'ConfirmPiece'});
                    if (ConfirmPiece) rows[i].ConfirmPiece = Number((ConfirmPiece.target).numberbox('getValue'));

                }
                var ConfirmPieceTotal = rows.reduce((sum, itm) => sum + (itm.ConfirmPiece || 0), 0);
                var SysPieceTotal = rows.reduce((sum, itm) => sum + (itm.Piece || 0), 0);
                console.log({rows,ConfirmPieceTotal,SysPieceTotal})
                if (rows) {
                    $('#dlg').dialog('open');
                    
                    $('#ConfirmPieceTotal').numberbox('setValue', ConfirmPieceTotal);
                    $('#SysPieceTotal').numberbox('setValue', SysPieceTotal);
                    $('#SelProductCount').numberbox('setValue', rows.length);

                    $('#ReqHouseOpts').combobox('setValue', rows[0].ParentHouse);

                    $('#RplRemark').textbox().next('span').find('input').focus();
                }
                //saveData
            }
            
            function onAcceptAddressChanged(item) {
                $('#AAcceptUnit').val(item.AcceptCompany);
                $('#AAcceptAddress').textbox('setValue', item.AcceptAddress);
                $('#AAcceptTelephone').val(item.AcceptTelephone);
