                    url: null,
                    toolbar: '#oosTblTollbar',
                    columns: [columns],
                    frozenColumns: [[
                        { title: '', field: 'OOSID', checkbox: true, width: '10%' },
                        {
                            title: '产品代码', field: 'ProductCode', width: '105px'
